{% extends '_layouts/base.njk' %}

{% block content %}


<style>@import url('https://fonts.googleapis.com/css?family=Sedgwick+Ave');</style>


<article class="container">

<h1 class="queentitle">Queen</h1>


  <div class="row">
    <div class="col-xs-3 col-sm-4 col-md-4 col-lg-4 left-rail">
      {% block info %}
      <h1 style="text-align:center">{{ members.name }}</h1>
      <img class="mr-3" src= "assets/img/members/{{ members.image }}" alt="Queen band member" style="width:300px">
      {% endblock %}
    </div>

    <div class="col-xs-9 col-sm-8 col-md-8 col-lg-8">
      <p> {{ members.text | safe}} </p>
        <li>Instruments: {{ members.instruments}}</li>
        <li>Tenure: {{ members.tenure}}</li>
        <li>Birthplace: {{ members.birthplace}}</li>
    </div>

  </div>

</article>
{% endblock %}
